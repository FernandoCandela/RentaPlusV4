<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="-89dp">

    <EditText
        android:id="@+id/tviMonto"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviFechaPago" />

    <EditText
        android:id="@+id/tviNombres"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Nombres"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iviFoto" />

    <EditText
        android:id="@+id/tviApellidos"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviNombres" />

    <EditText
        android:id="@+id/tviEmail"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviApellidos" />

    <EditText
        android:id="@+id/tviTelefono"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviEmail" />

    <EditText
        android:id="@+id/tviFechaPago"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_field"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Fecha de Pago"
        android:inputType="date"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviTelefono" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_buttom"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:text="@string/update_profile"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviMonto"
        app:layout_constraintVertical_bias="0.571" />

    <ImageView
        android:id="@+id/iviFoto"
        android:layout_width="176dp"
        android:layout_height="184dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>