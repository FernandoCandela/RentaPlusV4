<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="-89dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_buttom"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:text="@string/update_profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviDireccion" />

    <EditText
        android:id="@+id/tviDireccion"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:autofillHints="@string/name"
        android:background="@drawable/ic_field"
        android:drawableStart="@drawable/ubicacion"
        android:drawableLeft="@drawable/ubicacion"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="DirecciÃ³n"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tviTitulo" />

    <EditText
        android:id="@+id/tviTitulo"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:autofillHints="@string/name"
        android:background="@drawable/ic_field"
        android:drawableStart="@drawable/home"
        android:drawableLeft="@drawable/home"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iviFoto" />

    <ImageView
        android:id="@+id/iviFoto"
        android:layout_width="174dp"
        android:layout_height="190dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>